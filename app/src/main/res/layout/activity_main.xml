<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_main"
    tools:context="com.example.flaviuoprea.creativity.MainActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/deseneaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sa_desenam"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="?android:attr/selectableItemBackground"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/construieste_castel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/construieste_un_castel"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/picteaza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/picteaza"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/construieste_lego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/construieste_cu_lego"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"/>



</LinearLayout>
